<ServerManagerConfiguration>
  <!-- Begin DrillholeGA -->
  <ProxyGroup name="filters">
    <SourceProxy name="DrillholeGA" class="vtkDrillholeGA" label="Drillhole GA">
      <Documentation
        long_help="Runs a genetic algorithm to determine optimal drillhole placement."
        short_help="Runs a genetic algorithm to determine optimal drillhole placement.">
      </Documentation>
      <OutputPort name="Best Drillholes" index="0" />
      <OutputPort name="Volume of Effect" index="1" />

      <!-- the pointset -->
      <InputProperty name="Source" label="cosmic background radiation" command="SetSourceConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <Documentation>
          Something
        </Documentation>
      </InputProperty>

      <!-- Collar Points (if any) -->
      <InputProperty name="Input" label="hallelugleeahhh" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <Documentation>
          Something
        </Documentation>
      </InputProperty>
      
      <!-- Drillhole Database -->
      <StringVectorProperty
        name="DrillholeDatabase"
        command="SetDrillholeDatabase"
        number_of_elements="1"
        default_values="">
        <Documentation>
          Set the path to the Drillhole Database file (dhd) you want to save drillholes to.
        </Documentation>
      </StringVectorProperty>
      <IntVectorProperty
       name="Resume"
       command="SetResume"
       number_of_elements="1"
       default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          Check this to resume from a previous run.
        </Documentation>
      </IntVectorProperty>
      <StringVectorProperty
        name="ResumeFromS2C"
        command="GetResumeFromS2C"
        information_only="1">
        <SimpleStringInformationHelper />
      </StringVectorProperty>
      <StringVectorProperty
        name="ResumeFromC2S"
        command="SetResumeFromC2S"
        number_of_elements="1"
        default_values="">
      </StringVectorProperty>
      <IntVectorProperty
       name="RefreshPlease"
       command="SetRefreshPlease"
       number_of_elements="1"
       default_values="0">
        <BooleanDomain name="bool" />
      </IntVectorProperty>
      <Property 
        name="Refresh"
        command="DoSomething"
        is_internal="1">
      </Property>
      

      <!-- Genetic Algorithm Parameters -->
      <IntVectorProperty
        name="NumGenerations"
        command="SetNumGenerations"
        number_of_elements="1"
        default_values="10">
        <Documentation>
          Set the number of generations that the GA will optimize for.
        </Documentation>
      </IntVectorProperty>
      <IntVectorProperty
       name="NumPasses"
       command="SetNumPasses"
       number_of_elements="1"
       default_values="1">
        <Documentation>
          Set the number of times the algorithm will run the GA+Hill Climbing
        </Documentation>
      </IntVectorProperty>
      <IntVectorProperty
        name="PopulationSize"
        command="SetPopulationSize"
        number_of_elements="1"
        default_values="50">
        <Documentation>
          Set the number of individuals that will be generated in the population.
        </Documentation>
      </IntVectorProperty>
      <IntVectorProperty
        name="IndividualSize"
        command="SetIndividualSize"
        number_of_elements="1"
        default_values="20">
        <Documentation>
          Set the number of drillholes that each individual represents.
        </Documentation>
      </IntVectorProperty>
      <DoubleVectorProperty
        name="MutationProb"
        command="SetMutationProb"
        number_of_elements="1"
        default_values="0.1">
        <Documentation>
          Set the probability of mutation (applies only when GA not stagnant)
        </Documentation>
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="MutationGeneProb"
        command="SetMutationGeneProb"
        number_of_elements="1"
        default_values="0.1">
        <Documentation>
          Set the probability of gene mutation (applies only when GA not stagnant). The total probability of a gene being mutated MutationProb*MutationGeneProb + stagnancy measures.
        </Documentation>
      </DoubleVectorProperty>
      <DoubleVectorProperty
       name="SegmentLength"
       command="SetSegmentLength"
       number_of_elements="1"
       default_values="35.0">
        <Documentation>
          Length between any two sampled drillhole points (should be at least as big as the smallest anisotropy magnitude).
        </Documentation>
      </DoubleVectorProperty>

      <!-- Drillhole Collar Locations -->
      <IntVectorProperty
        name="CollarLocation"
        command="SetCollarLocation"
        number_of_elements="1"
        default_values="0">
        <EnumerationDomain name="enum">
          <Entry value="0" text="CSV File"/>
          <Entry value="1" text="In Filter 'Source'"/>
        </EnumerationDomain>
      </IntVectorProperty>
      <StringVectorProperty
        name="CollarFile"
        command="SetCollarFile"
        number_of_elements="1"
        default_values="not used">
        <Documentation>
          Set the path to your drillhole collar point parameters (CSV).
        </Documentation>
      </StringVectorProperty>

      <!-- Drillhole Constraints -->
      <DoubleVectorProperty 
        name="DAzimuthMin"
        command="SetDAzimuthMin"
        number_of_elements="1"
        default_values="-50.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="DAzimuthMax"
        command="SetDAzimuthMax"
        number_of_elements="1"
        default_values="50.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="DDipMin"
        command="SetDDipMin"
        number_of_elements="1"
        default_values="-45.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="DDipMax"
        command="SetDDipMax"
        number_of_elements="1"
        default_values="70.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="DLengthMin"
        command="SetDLengthMin"
        number_of_elements="1"
        default_values="150.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="DLengthMax"
        command="SetDLengthMax"
        number_of_elements="1"
        default_values="1000.0">
      </DoubleVectorProperty>

      <!-- Anisotropy Values -->
      <DoubleVectorProperty
        name="EMajor"
        command="SetEMajor"
        number_of_elements="1"
        default_values="140.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="EMedium"
        command="SetEMedium"
        number_of_elements="1"
        default_values="105.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="EMinor"
        command="SetEMinor"
        number_of_elements="1"
        default_values="35.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="EAzimuth"
        command="SetEAzimuth"
        number_of_elements="1"
        default_values="350.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="EDip"
        command="SetEDip"
        number_of_elements="1"
        default_values="270.0">
      </DoubleVectorProperty>
      <DoubleVectorProperty
        name="ERake"
        command="SetERake"
        number_of_elements="1"
        default_values="0.0">
      </DoubleVectorProperty>
      
      <!-- Hill Climbing -->
      <IntVectorProperty
       name="DoHillClimbLength"
       command="SetDoHillClimbLength"
       number_of_elements="1"
       default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          Whether you want Length Hill Climbing to occur.
        </Documentation>
      </IntVectorProperty>
      <IntVectorProperty
       name="DoHillClimbDirection"
       command="SetDoHillClimbDirection"
       number_of_elements="1"
       default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          Whether you want Direction Hill Climbing to occur.
        </Documentation>
      </IntVectorProperty>
      <DoubleVectorProperty
       name="HillClimbLength"
       command="SetHillClimbLength"
       number_of_elements="1"
       default_values="5.0">
        <Documentation>
          TODO: ADD DOC
        </Documentation>
      </DoubleVectorProperty>
      <DoubleVectorProperty
       name="HillClimbAzimuthWindow"
       command="SetHillClimbAzimuthWindow"
       number_of_elements="1"
       default_values="20.0">
        <Documentation>
          TODO: ADD DOC
        </Documentation>
      </DoubleVectorProperty>
      <DoubleVectorProperty
       name="HillClimbDipWindow"
       command="SetHillClimbDipWindow"
       number_of_elements="1"
       default_values="20.0">
        <Documentation>
          TODO: ADD DOC
        </Documentation>
      </DoubleVectorProperty>

      

    </SourceProxy>
  </ProxyGroup>
  <!-- End DrillholeGA -->
</ServerManagerConfiguration>