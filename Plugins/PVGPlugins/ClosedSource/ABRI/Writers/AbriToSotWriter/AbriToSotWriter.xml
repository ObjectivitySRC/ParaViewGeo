<ServerManagerConfiguration>
  <ProxyGroup name="writers">
    <WriterProxy name="AbriToSotWriter" class="vtkAbriToSotWriter" base_proxygroup="writers">

      <!--Documentation short_help="">.</Documentation>-->

      <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPolyData"/>
        </DataTypeDomain>
     </InputProperty>

      <StringVectorProperty
            name="FileName"
            command="SetFileName"
            number_of_elements="1">
        <Documentation>
          The name of the file to be written.
        </Documentation>
      </StringVectorProperty>


      <StringVectorProperty
            name="StartDate"
            command="SetStartDate"
            number_of_elements="1"
            default_values="2009-01-31">
        <Documentation>
          set the date activity will start
        </Documentation>
      </StringVectorProperty>

			<StringVectorProperty
            name="StrikePosition"
            command="SetStrikePosition"
            number_of_elements="1"
            default_values="x">
        <Documentation>
          set the date activity will start
        </Documentation>
      </StringVectorProperty>		

			<StringVectorProperty
            name="ScriptPath"
            command="SetScriptPath"
            number_of_elements="1">
        <Documentation>
          set the date activity will start
        </Documentation>
      </StringVectorProperty>		
			
			<IntVectorProperty
       name="StartingStope"
       command="SetStartingStope"
       number_of_elements="1"
       default_values="0" >
      </IntVectorProperty>
			
			<IntVectorProperty
       name="Type Of Blocks"
       command="SetTypeOfBlocks"
       number_of_elements="1"
       default_values="0" >
        <EnumerationDomain name="enum">
          <Entry value="0" text="Irregular"/>
          <Entry value="1" text="Regular"/>
        </EnumerationDomain>
        <Documentation>
         set the type of blocks in input (can be regular cells block or irregular)
        </Documentation>
      </IntVectorProperty>
			
      <DoubleVectorProperty
         name="BlockSize"
         command="SetBlockSize"
         number_of_elements="3"
         animateable="1"
         default_values="5.0 5.0 5.0" >
        <DoubleRangeDomain name="range"/>
      </DoubleVectorProperty>

      <DoubleVectorProperty
       name="Tonne Per Day"
       command="SetDuration"
       number_of_elements="1"
       default_values="1" >
        <Documentation>          
        </Documentation>
      </DoubleVectorProperty>
      
      <DoubleVectorProperty
       name="Downhill meters Per Day"
       command="SetDaysByMeter"
       number_of_elements="1"
       default_values="0.1" >
        <Documentation>
          Duration by Downhill meters
        </Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
       name="Horizontal meters Per Day"
       command="SetHzDByMeter"
       number_of_elements="1"
       default_values="0.1" >
        <Documentation>
          Duration by horizontal meters
        </Documentation>
      </DoubleVectorProperty>      
    
      <Hints>
        <Property name="Input" show="0" />
        <Property name="FileName" show="0" />
      </Hints>

    </WriterProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
